@model IEnumerable<BuildIt.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project List</h2>

<p>
    @Html.ActionLink("Create New Project", "Create")
</p>
<div class="row">
    <div class="col-md-6">
        <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
               <b> @Html.DisplayFor(modelItem => item.ProjectName)</b>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ProjectId }) |
                @Html.ActionLink("Manage  Project", "Details", new { id=item.ProjectId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ProjectId })
            </td>
        </tr>
    }

      </table> 
    </div><!--END TABLE COL-->
    <div class="col-md-6">
        <div id="banner"><img src="https://yodaarchives.files.wordpress.com/2016/01/kayleeprint.jpeg" alt="abby" /> 
        </div>
    </div>
</div> <!--end row-->      
